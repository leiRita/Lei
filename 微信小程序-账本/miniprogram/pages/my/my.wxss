/* miniprogram/pages/my/my.wxss */
@import "./my.skeleton.wxss";
.user-bg{
  height: 360rpx;
  background-color: #1296db;
  display: flex;
  align-items: center;
}

.user-info{
  width: 180rpx;
  margin: 0 auto;
}
.avatar{
  height: 180rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 0 0 8rpx rgba(255, 255, 255, .35);
  overflow: hidden;
}
.nickname{
  text-align: center;
  margin-top: 20rpx;
  color: #444;
  font-size: 32rpx;
}

.list{
  margin-top: 20rpx;
}

.my-list-item{
  margin-bottom: 10rpx;
}

.my-list-item:last-child{
  margin-bottom: 0;
}
.avatar-img{
  width: 180rpx;
}
button:not([size='mini']){
  width: 260rpx !important;
  font-weight: normal;
  font-size: 28rpx;
}