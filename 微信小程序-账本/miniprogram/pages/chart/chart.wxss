/* miniprogram/pages/chart/chart.wxss */
@import "./chart.skeleton.wxss";
.chart-nav{
  height: 60rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #1296db;
}
.select-data{
  width: calc(100% - 240rpx);
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
}
.date-type{
  width: 160rpx;
  height: 60rpx;
  background-color: #fff;
  font-size: 25rpx;
  text-align: center;
  line-height: 60rpx;
  color: #444;
  border-radius: 30rpx;
}
.type-nav{
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
}
.type-nav-item{
  display: flex;
  flex: 1;
}
.type-nav-title{
  display: flex;
  margin: 0 auto;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  color: #444;
  padding: 10rpx;
}
.type-nav-title-int{
  padding: 10rpx;
}
.active-sr{
  color: #249D62;
  background-color: #75c7f3;
  border-radius: 10rpx;
}
.active-zc{
  color: #D13B2E;
  background-color: #75c7f3;
  border-radius: 25rpx;
}

.pie-box{
  margin-top: 20rpx;
  height: 750rpx;
  background-color: #fff;
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.type-date{
  margin-top: 20rpx;
}